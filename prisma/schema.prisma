generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  emailVerifiedAt DateTime?
  password        String
  username        String
  avatar          String?
  addressLine1    String?
  city            String?
  country         String?
  postcode        String?
  apiKey          String?   @unique
  role            Role      @default(USER)
  isActive        Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  sessions      Session[]
  chats         Chat[]
  invoices      Invoice[]
  subscriptions Subscription[]
  accounts      Account[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model PasswordResetToken {
  email     String   @id
  token     String
  createdAt DateTime @default(now())

  @@map("password_reset_tokens")
}

model Chat {
  id            String   @id @default(cuid())
  userId        String
  title         String
  path          String?
  uuid          String   @unique @default(uuid())
  chatHistory   String?  @db.Text
  assistantId   String?
  threadId      String?
  vectorStoreId String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks Task[]

  @@index([userId])
  @@map("chats")
}

model Task {
  id          String     @id @default(cuid())
  chatId      String
  description String
  status      TaskStatus @default(TODO)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@index([chatId])
  @@map("tasks")
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

model Plan {
  id           String   @id @default(cuid())
  name         String
  description  String?
  price        Float    @default(0)
  features     String?  @db.Text
  status       Boolean  @default(false)
  isFree       Boolean  @default(false)
  isPopular    Boolean  @default(false)
  billingCycle String   @default("monthly")
  pdfs         Int      @default(0)
  questions    Int      @default(0)
  pdfSize      Float    @default(0)
  pdfPages     Int      @default(0)
  paypalPlanId String?
  stripePlanId String?
  softDelete   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  invoices      Invoice[]
  subscriptions Subscription[]

  @@map("plans")
}

model Subscription {
  id                    String             @id @default(cuid())
  subId                 String             @unique @default(uuid())
  userId                String
  planId                String
  status                SubscriptionStatus @default(PENDING)
  expiringAt            DateTime?
  paymentGateway        String?
  gatewayPlanId         String?
  gatewaySubscriptionId String?
  pdfs                  Int                @default(0)
  questions             Int                @default(0)
  pdfSize               Int                @default(0)
  pdfPages              Int                @default(0)
  currency              String             @default("EUR")
  createdAt             DateTime           @default(now())
  updatedAt             DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan Plan @relation(fields: [planId], references: [id])

  @@index([userId])
  @@index([planId])
  @@map("subscriptions")
}

enum SubscriptionStatus {
  PENDING
  ACTIVE
  CANCELLED
  EXPIRED
}

model Invoice {
  id                    String        @id @default(cuid())
  invoiceId             String        @unique @default(uuid())
  userId                String
  planId                String
  status                InvoiceStatus @default(PENDING)
  amount                Float         @default(0)
  currency              String        @default("EUR")
  paidAt                DateTime?
  paymentGateway        String?
  gatewayPlanId         String?
  gatewaySubscriptionId String?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan Plan @relation(fields: [planId], references: [id])

  @@index([userId])
  @@index([planId])
  @@map("invoices")
}

enum InvoiceStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

model Page {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String?  @db.Text
  status    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("pages")
}

model Setting {
  id    String @id @default(cuid())
  name  String @unique
  value String @default("")
  type  String @default("string")

  @@map("settings")
}
